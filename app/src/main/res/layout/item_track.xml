<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:background="@color/blueDark"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/track_number_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/material_margin_small"
        android:layout_marginRight="@dimen/material_margin_small"
        android:layout_weight="7"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/textColorLight"
        android:textSize="18sp"
        tools:text="1"
        tools:textColor="@color/textColorLight" />

    <TextView
        android:id="@+id/track_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="Te Vas"
        tools:textColor="@color/white" />
</LinearLayout>